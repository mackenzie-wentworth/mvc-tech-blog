<h1>Your Dashboard</h1>

<div class="card">
    <div class="card-header">
        <h2>Edit Blog Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" name="post-id" value="{{blogPost.id}}" />
        <div>
            <label for="title">Title:</label>
            <input type="text" id="edit-title" value="{{blogPost.title}}" />
        </div>
        <div>
            <label for="contents">Content:</label>
            <input type="text" id="edit-contents" value="{{blogPost.contents}}" />
        </div>
        <button href="/api/blogPosts" class="btn" type="submit">Update</button>

        <button id="delete-btn" class="btn" type="button">Delete</button>
    </form>
</div>

<script src="./js/editPost.js"></script> 