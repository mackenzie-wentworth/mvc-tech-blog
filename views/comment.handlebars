{{!-- Back to Homepage arrow --}}
<div class="pl-3 py-3">
  <a id="switchPage" href="/">
    <small class="form-text text-muted">&larr; Back to Homepage</small>
  </a>
</div>
{{!-- Single Blog Post --}}
<div class="card mx-auto w-75 p-3">
  <div class="card-header">
    <small id="comment-title">{{title}}</small>
    <small class="d-inline-block float-right margin-top" style="margin-top:.2rem;">
      <i>Posted by {{user.username}} on {{format_date date_created}}</i>
    </small>
  </div>
  <div class="card-body">
    <p class="card-text">{{contents}}</p>
  </div>

  {{#if logged_in}}
  <form id="add-comment-form">
    <div class="form-group text-center">
      <input type="hidden" value="{{blogPost.id}}" />
      {{!-- <label for="create-contents">Add Comment:</label> --}}
      <textarea class="form-input mx-auto w-75 pl-2 pt-2" id="add-comment" placeholder="Type comment here..." rows="4"></textarea>
    </div>

    <div class="text-center mt-n4">
      <button type="submit" class="btn btn-primary ">Submit Comment</button>
    </div>
  </form>
  {{/if}}
</div><br>




{{!-- All User Comments --}}
<div class="card-header comments mx-auto w-75 pb-1">
  <h5 id="comment-header">User Comments</h5>
</div>
{{#each comments as |comment| }}
<div class="card mx-auto w-75 p-3">
  {{!-- <div class="card-header"></div> --}}
  <div>
    <p>{{comment.comment_body}}</p>
    <p> &mdash; {{user.username}} on {{format_date date_created}}</p>
  </div>
</div>

{{/each}}



