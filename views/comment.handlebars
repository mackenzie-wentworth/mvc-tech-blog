{{#if logged_in}}
<form id="add-comment-form" class="card-body">
  <div>
    <input type="hidden" value="{{blogPost.id}}" />
    <label class="form-label" for="add-comment">Comment</label>
  </div>
  <div>
    <textarea class="form-input" id="add-comment" placeholder="Type comment here..."></textarea>

    <button type="submit" class="btn">Submit</button>
  </div>
</form>
{{/if}}

<script src="/js/comment.js"></script>