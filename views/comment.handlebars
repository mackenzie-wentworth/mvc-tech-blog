{{!-- User's view once user clicks on an existing blog post from the homepage. Displays the selected blog post and
"comment" text box form with 'submit' button to submit comment --}}

{{!-- TODO: Use helper functions --}}

<div>
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{title}}</h2>
      <p>Posted by {{user.username}} on {{format_date date_created}}</p>
      <p class="card-text">{{contents}}</p>
    </div>
  </article>

  {{!-- <h2>{{title}}</h2>
  <p>Posted by {{user.username}} on {{format_date date_created}}</p>
  <p>{{contents}}</p> --}}

  <h3>User Comments</h3>
  {{#each comments as |comment|}}
  <div>
    <p>{{comment.comment_body}}</p>
    <p> &mdash; {{user.username}} on {{format_date date_created}}</p>
  </div>
  {{/each}}
</div>


{{#if logged_in}}
<form id="add-comment-form" class="card-body">
  <input type="hidden" name="blogPost-id" value="{{blogPost.id}}" />
  <div class="mb-3">
    <label class="form-label" for="comment-body">Comment</label>
  </div>
  <div>
    <textarea name="comment-body" class="form-input" placeholder="Add your comment here..."></textarea>

    <button type="submit" class="btn">Submit</button>
  </div>
</form>
{{/if}}

<script src="/js/comment.js"></script>